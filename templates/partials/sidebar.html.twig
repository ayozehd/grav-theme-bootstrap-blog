{% set feed_url = blog.url == '/' or blog.url == base_url_relative ? (base_url_relative~'/'~blog.slug) : blog.url %}
{% set new_base_url = blog.url == '/' ? '' : blog.url %}

{% if config.plugins.simplesearch.enabled %}
    <div class="sidebar-content">
        {% include 'partials/simplesearch_searchbox.html.twig' %}
    </div>
{% endif %}
{% if config.plugins.relatedpages.enabled and related_pages|length > 0 %}
    <div class="sidebar-content">
        <h4>{{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.RELATED_PAGES.HEADLINE'|t }}</h4>
        {% include 'partials/relatedpages.html.twig' %}
    </div>
{% endif %}
{% if config.theme.sidebar.about.enabled %}
    <div class="sidebar-content">
        {% set about_content = config.theme.sidebar.about %}
        {% if config.theme.sidebar.about.page %}
            {% set about_content = page.find( config.theme.sidebar.about.page ) %}
        {% endif %}
        <h4>{{ about_content.title }}</h4>
        <p>{{ about_content.content }}</p>
    </div>
{% endif %}
{% if config.plugins.random.enabled %}
    <div class="sidebar-content">
        <h4>{{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.RANDOM.HEADLINE'|t }}</h4>
        <a class="btn btn-outline-primary" href="{{ base_url_relative }}/random">
            <i class="fas fa-retweet"></i> 
            {{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.RANDOM.FEELING_LUCKY'|t }}
        </a>
    </div>
{% endif %}
{% if config.plugins.taxonomylist.enabled %}
    <div class="sidebar-content">
        <h4>{{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.POPULAR_TAGS.HEADLINE'|t }}</h4>
        {% include 'partials/taxonomylist.html.twig' with {'base_url':new_base_url, 'taxonomy':'tag'} %}
    </div>
{% endif %}
{% if config.plugins.archives.enabled %}
    <div class="sidebar-content">
        <h4>{{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.ARCHIVES.HEADLINE'|t }}</h4>
        {% include 'partials/archives.html.twig' with {'base_url':new_base_url} %}
    </div>
{% endif %}
{% if config.plugins.lastfm.enabled %}
    <div class="sidebar-content">
        <h4>{{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.LASTFM.HEADLINE'|t }}</h4>
        {% include 'partials/lastfm.html.twig' %}
    </div>
{% endif %}
{% if config.theme.sidebar.twitter.enabled %}
    <div class="sidebar-content">
        {% do assets.addJs('https://platform.twitter.com/widgets.js', { loading:'async', group: 'bottom'}) %}
        <a class="twitter-timeline" data-height="{{ config.theme.sidebar.twitter.height|default(600) }}"
           data-theme="{{ config.theme.sidebar.twitter.theme|default('light') }}"
           href="https://twitter.com/{{ config.theme.sidebar.twitter.user|default('twitter') }}">
        </a>
    </div>
{% endif %}
{% if config.plugins.feed.enabled %}
    <div class="sidebar-content syndicate">
        <h4>{{ 'THEME_BOOTSTRAP_BLOG.SIDEBAR.SYNDICATE.HEADLINE'|t }}</h4>
        <a class="btn btn-outline-primary" href="{{ feed_url }}.atom"><i class="fa fa-rss-square"></i> Atom 1.0</a>
        <a class="btn btn-outline-primary" href="{{ feed_url }}.rss"><i class="fa fa-rss-square"></i> RSS</a>
    </div>
{% endif %}
